{
    "singleQuote": false,
    "trailingComma": "none",
    "tabWidth": 4,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "printWidth": 150
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        }
    ]
}
